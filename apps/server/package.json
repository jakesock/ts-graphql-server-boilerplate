{
  "name": "@monorepo/server",
  "version": "1.0.0",
  "author": "Jake Thomas",
  "description": "The server for the AirBnB clone",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development nodemon --delay 500ms dist/index.js",
    "test": "NODE_ENV=test yarn run db:setup-test && jest --detectOpenHandles --runInBand",
    "test:watch": "NODE_ENV=test yarn run db:setup-test && jest --watch",
    "build": "yarn clean && tsc && yarn copy:all",
    "build:watch": "yarn clean && concurrently \"tsc -w\" \"yarn copy:all\"",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:types": "tsc --pretty --noEmit",
    "check:all": "yarn check:format && yarn check:lint && yarn check:types",
    "typeorm:cli": "../../node_modules/typeorm cli -f ./src/lib/config/orm.config.ts",
    "table:create": "yarn run typeorm:cli -- migration:run",
    "table:drop": "yarn run typeorm:cli -- migration:revert",
    "db:setup-test": "ts-node ./src/test/setup.ts",
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "clean": "rimraf ./dist",
    "copy:all": "yarn copy-emails",
    "copy-emails": "copyfiles -u 1 \"./src/**/*.pug\" ./dist/ && echo \"Copied email templates to dist\""
  },
  "dependencies": {
    "@monorepo/errors": "workspace:*",
    "@monorepo/yup-schemas": "workspace:*",
    "apollo-server-core": "^3.7.0",
    "apollo-server-express": "^3.7.0",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "dotenv": "^16.0.1",
    "email-templates": "^9.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "graphql": "^15.8.0",
    "graphql-query-complexity": "^0.11.0",
    "graphql-query-complexity-apollo-plugin": "^1.0.2",
    "ioredis": "^5.0.5",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "pug": "^3.0.2",
    "rate-limit-redis": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@monorepo/config": "workspace:*",
    "@monorepo/tsconfig": "workspace:*",
    "@types/connect-redis": "^0.0.18",
    "@types/email-templates": "^8.0.4",
    "@types/express-session": "^1.17.4",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.15.0",
    "gen-env-types": "^1.3.4",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testTimeout": 20000
  }
}

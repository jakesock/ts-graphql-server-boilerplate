{
  "name": "@monorepo/server",
  "version": "1.0.0",
  "author": "Jake Thomas",
  "description": "The server for the AirBnB clone",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc -w",
    "start": "NODE_ENV=production node dist/src/index.js",
    "dev": "NODE_ENV=development nodemon dist/src/index.js",
    "db:setup-test": "ts-node ./src/test/setup.ts",
    "test": "NODE_ENV=test yarn run db:setup-test && jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test yarn run db:setup-test && jest --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "check:types": "tsc --pretty --noEmit",
    "check:all": "yarn check:format && yarn lint && yarn check:types && yarn test && yarn build",
    "gen-env": "gen-env-types .",
    "typeorm:cli": "../../node_modules/typeorm cli -f ./src/lib/config/typeorm.config.ts",
    "table:create": "yarn run typeorm:cli -- migration:run",
    "table:drop": "yarn run typeorm:cli -- migration:revert"
  },
  "dependencies": {
    "apollo-server-core": "^3.7.0",
    "apollo-server-express": "^3.7.0",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^16.5.0",
    "graphql-query-complexity": "^0.11.0",
    "graphql-query-complexity-apollo-plugin": "^1.0.2",
    "ioredis": "^5.0.4",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@monorepo/config": "workspace:*",
    "@monorepo/tsconfig": "workspace:*",
    "@types/connect-redis": "^0.0.18",
    "@types/express-session": "^1.17.4",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.15.0",
    "gen-env-types": "^1.3.4",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
